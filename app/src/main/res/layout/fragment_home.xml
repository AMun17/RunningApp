    <Button
        android:id="@+id/buttonStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Mulai"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
